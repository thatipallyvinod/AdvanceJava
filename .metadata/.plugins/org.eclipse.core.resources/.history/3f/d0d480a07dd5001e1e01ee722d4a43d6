function convertToINR() {
    // Define the conversion rate from dollars to INR
    let rate = 82.32;
    
    // Retrieve the value entered in the input field with id 'dollarInput'
    const dollar = parseFloat(document.getElementById('dollarInput').value);
    
    // Convert the entered dollar amount to INR using the conversion rate
    const inr = dollar * rate;
    
    // Display the converted amount in the input field with id 'INRoutput', rounded to 2 decimal places
    document.getElementById('INRoutput').value = inr.toFixed(2);
}

